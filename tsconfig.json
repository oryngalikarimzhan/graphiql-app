{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "paths": {
      "assets": ["assets/index"],
      "components/layout": ["components/layout/index"],
      "components/shared": ["components/shared/index"],
      "components/ui": ["components/ui/index"],
      "features": ["features/index"],
      "pages": ["pages/index"],
      "store": ["store/index"],
      "utils/constants": ["utils/constants/index"],
      "utils/helpers": ["utils/helpers/index"],
      "utils/types": ["utils/types/index"]
    }
  },
  "include": [".eslintrc.cjs", "./src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "src/**/*.{spec,test}.{ts,tsx}"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
